@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Kategori Adı</th>
            <th>Kategori Açıklaması</th>
            <th>Sil</th>
            <th>Düzenle</th>
            <th>Başlıklar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.CategoryName</td>
                <td>@item.CategoryDescription</td>
                <td><a href="#" class="btn btn-danger">Sil</a></td>
                <td><a href="#" class="btn btn-success">Güncelle</a></td>
                <td><a href="#" class="btn btn-warning">Başlıklar</a></td>
            </tr> 
        }

        </tbody>
    </table>
    <br />
    <a href="/AdminCategory/AddCategory" class="btn btn-info">Yeni Kategori</a>

